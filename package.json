{
  "name": "mqttletoad",
  "version": "0.0.0-development",
  "description": "Black magic on top of MQTT.js",
  "main": "lib/index.js",
  "scripts": {
    "test": "mocha 'test/*.spec.js'",
    "lint": "eslint lib test",
    "format": "prettier-eslint --write 'lib/**/*.js' 'test/**/*.js'",
    "pretest": "npm run lint",
    "test:coverage": "nyc npm run test",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "precommit": "lint-staged"
  },
  "keywords": [
    "mqtt",
    "pub",
    "publish",
    "sub",
    "subscription",
    "helper",
    "pubsub",
    "event",
    "message",
    "wrapper",
    "promise",
    "router"
  ],
  "author": "Christopher Hiller <boneskull@boneskull.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "eventemitter2": "^4.1.2",
    "mqtt": "^2.15.1",
    "pify": "^3.0.0"
  },
  "files": [
    "lib"
  ],
  "devDependencies": {
    "coveralls": "^3.0.0",
    "eslint": "^4.8.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-config-semistandard": "^11.0.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "get-port": "^3.2.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.3",
    "mocha": "^4.0.1",
    "mqtt-connection": "^3.1.0",
    "nyc": "^11.2.1",
    "prettier-eslint-cli": "^4.4.0",
    "semantic-release": "^8.0.3",
    "unexpected": "^10.36.0"
  },
  "engines": {
    "node": ">=8.0"
  },
  "bugs": {
    "url": "https://github.com/boneskull/mqttletoad/issues"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/boneskull/mqttletoad.git"
  },
  "homepage": "https://github.com/boneskull/mqttletoad#readme",
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": false
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "git add"
    ]
  }
}
